<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./styles/styles.css" />
    <title>Ecommerce</title>
  </head>

  <body>
    <nav>
      <div class="nav-bar">
        <img
          class="img-thumbnail mr-4"
          height="200px"
          width="200px"
          src="/uploads/<%= user.profilePicture %>"
          alt=""
        />
        <h2 class="">
          Bienvenido, <%= user.email %>
          <form id="logout-form" action="/auth/logout" method="POST">
            <button class="btn btn-outline-danger" type="submit">Logout</button>
          </form>
        </h2>
        <a href="/carts/cart">
          <button class="btn btn-primary cartBtn">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-cart"
              viewBox="0 0 16 16"
            >
              <path
                d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"
              />
            </svg>
          </button>
        </a>
      </div>
      <div class="categoryDiv">
        <a href="/home">
          <button class="btn btn-outline-secondary catButton">All</button>
        </a>
        <a href="/home?category=Guitar">
          <button class="btn btn-outline-secondary catButton">Guitar</button>
        </a>
        <a href="/home?category=Bass">
          <button class="btn btn-outline-secondary catButton">Bass</button>
        </a>
      </div>
    </nav>

    <article>
      <div
        data-cartId="<%= user.cart %>"
        class="products-div"
        id="productsCards-div"
      >
        <% products.forEach(function(item) { %>
        <div class="card" style="width: 18rem">
          <img src="<%= item.thumbnail %>" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title"><%= item.title %></h5>
            <p class="card-text"><%= item.description %></p>
            <p class="card-text">$<%= item.price %></p>
          </div>
          <button
            data-productId="<%= item._id %>"
            name="addToCart"
            class="btn btn-info btn-add-to-cart"
          >
            Add to cart
          </button>
        </div>
        <% }); %>
      </div>
    </article>

    <footer></footer>
  </body>

  <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
    integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD"
    crossorigin="anonymous"
  ></script>
  <script src="./index.js"></script>
</html>
